  //   "*.css": "postcss"
  // },
  // "css.validate": false,
  // "less.validate": false,
  // "scss.validate": false,
  "css.customData": [".vscode/tailwind.json"],
  // "scss.lint.unknownAtRules": "ignore",
  "stylelint.validate": ["css", "scss", "vue"]
}
